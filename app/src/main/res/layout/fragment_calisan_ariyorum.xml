                app:layout_constraintTop_toBottomOf="@id/imageBulasik" />


            <ImageView
                android:id="@+id/imageKasiyer"
                android:layout_width="250dp"
                android:layout_height="200dp"
                android:layout_marginTop="50dp"
                android:src="@drawable/kasiyer"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cagir6" />

            <Button
                android:id="@+id/cagir7"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:background="@drawable/buttonbackround_two"
                android:text="ÇAĞIR"
                android:textColor="@color/black"
                android:textStyle="italic"
                android:layout_marginTop="15dp"

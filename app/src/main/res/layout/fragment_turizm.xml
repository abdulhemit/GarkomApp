<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.turizmFragment">

    <ImageView
        android:id="@+id/image"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/resim"
        android:background="#ffff00"
        />

    <TextView
        android:id="@+id/yakinda_hizmetinizdeyiz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"
        android:text="Yakında hizmetinizdeyiz.."
        android:textSize="22sp"
        android:textColor="@color/white"

        />
    <TextView
        android:id="@+id/id_hesap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/yakinda_hizmetinizdeyiz"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Buradan çalışan hesabı oluşturaabilirsiniz."
        android:layout_marginTop="30dp"
        android:textSize="24sp"
        android:gravity="center"
        android:textColor="#FFFF00"
        />

</androidx.constraintlayout.widget.ConstraintLayout>